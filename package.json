{
  "name": "versu",
  "version": "0.6.3",
  "description": "VERSU",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/cli",
    "packages/action",
    "packages/plugin-gradle"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint packages/*/src/**/*.ts",
    "format": "prettier --write packages/*/src/**/*.ts"
  },
  "keywords": [
    "versu",
    "github-action",
    "cli",
    "monorepo",
    "semantic-versioning",
    "conventional-commits",
    "version-engine",
    "dependency-cascade",
    "gradle",
    "jvm"
  ],
  "author": "tvcsantos",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^20.19.23",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "rollup": "^4.52.5",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}
