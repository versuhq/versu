{
  "name": "@muverse/action",
  "version": "0.2.8",
  "description": "Version Engine for Repo Semantic Evolution (GitHub Action)",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "prebuild": "node scripts/generate-version.mjs",
    "build": "npx rollup --config rollup.config.mjs && npm run copy-assets && npm run copy-action-yml",
    "package": "npm run build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "copy-assets": "cpx \"../core/src/adapters/gradle/init-project-information.gradle.kts\" \"dist/\"",
    "copy-action-yml": "node scripts/copy-action-yml.mjs"
  },
  "keywords": [
    "muverse",
    "github-action",
    "semantic-versioning",
    "conventional-commits",
    "version-engine",
    "dependency-cascade",
    "gradle",
    "jvm"
  ],
  "author": "tvcsantos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tvcsantos/muverse.git"
  },
  "bugs": {
    "url": "https://github.com/tvcsantos/muverse/issues"
  },
  "homepage": "https://github.com/tvcsantos/muverse#readme",
  "files": ["dist"],
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@muverse/core": "^0.2.8"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^20.19.23",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "rollup": "^4.52.5",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}
