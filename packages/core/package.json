{
  "name": "@versu/core",
  "version": "0.6.13",
  "description": "VERSU (Core Library)",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "prebuild": "node scripts/generate-version.js",
    "build": "npm run build:esm",
    "build:esm": "tsc --project tsconfig.json --outDir dist",
    "build:cjs": "tsc --project tsconfig.cjs.json --outDir dist",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "versu",
    "core",
    "semantic-versioning",
    "conventional-commits",
    "version-engine",
    "dependency-cascade",
    "monorepo"
  ],
  "author": "tvcsantos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tvcsantos/versu.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/tvcsantos/versu/issues"
  },
  "homepage": "https://github.com/tvcsantos/versu#readme",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "conventional-changelog-writer": "^8.2.0",
    "conventional-commits-parser": "^6.2.1",
    "cosmiconfig": "^9.0.0",
    "deepmerge": "^4.3.1",
    "execa": "^9.6.1",
    "fast-glob": "^3.3.3",
    "semver": "^7.7.4",
    "typescript": "^5.3.3",
    "yaml": "^2.3.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.19.23",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "cpx": "^1.5.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}
