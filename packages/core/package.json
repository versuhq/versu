{
  "name": "@muverse/core",
  "version": "0.1.4",
  "description": "muVERSE Core - Version Engine for Repo Semantic Evolution (core business logic)",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "npm run build:esm",
    "build:esm": "tsc --project tsconfig.json --outDir dist && npm run copy-assets",
    "build:cjs": "tsc --project tsconfig.cjs.json --outDir dist && npm run copy-assets",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "copy-assets": "cpx \"src/adapters/gradle/init-project-information.gradle.kts\" \"dist/adapters/gradle/\""
  },
  "keywords": [
    "muverse",
    "core",
    "semantic-versioning",
    "conventional-commits",
    "version-engine",
    "dependency-cascade",
    "monorepo"
  ],
  "author": "tvcsantos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tvcsantos/muverse.git"
  },
  "bugs": {
    "url": "https://github.com/tvcsantos/muverse/issues"
  },
  "homepage": "https://github.com/tvcsantos/muverse#readme",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "conventional-commits-parser": "^6.2.1",
    "cosmiconfig": "^9.0.0",
    "deepmerge": "^4.3.1",
    "execa": "^9.6.1",
    "semver": "^7.5.4",
    "yaml": "^2.3.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.19.23",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "cpx": "^1.5.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}
